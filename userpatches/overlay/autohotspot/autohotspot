#!/bin/bash

. /etc/rebuild-settings

enable_hotspot() {
  echo "Enabling wifi hotspot"
  mv /etc/netplan/lib/30-wifi-hotspot.yaml /etc/netplan/
  netplan apply
}

enable_client() {
  echo "Enabling wifi client"
  sed -i 's/@WIFI_SSID@/'${WIFI_SSID}'/g' /etc/netplan/lib/20-wifi-client.yaml
  sed -i 's/@WIFI_PASSWORD@/'${WIFI_PASSWORD}'/g' /etc/netplan/lib/20-wifi-client.yaml
  mv /etc/netplan/lib/20-wifi-client.yaml /etc/netplan/
  netplan apply
}

if [ "${WIFI_TYPE}" == "client" ]; then
  enable_client
else if [ "${WIFI_TYPE}" == "hotspot" ]; then
  enable_hotspot
else
  echo "No Wifi specified"
fi
